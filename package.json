{
  "name": "create-timetable-at-once",
  "description": "中学校向け時間割自動作成デスクトップアプリ",
  "author": "KeppyNaushika",
  "license": "AGPL-3.0-only",
  "private": true,
  "main": "main/electron-src/index.js",
  "productName": "一括時間割作成",
  "version": "0.1.0-alpha.0",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "prisma generate && next build && tsc -p electron-src",
    "dist": "npm run build && electron-forge package --platform=darwin",
    "dist:win": "npm run build && electron-forge package --platform=win32",
    "dist:linux": "npm run build && electron-forge package --platform=linux",
    "clean": "rimraf dist main .next out",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit && tsc -p ./electron-src/tsconfig.json",
    "check-all": "npm run typecheck && npm run lint",
    "test:e2e": "npm run build && npx playwright test",
    "test:e2e:headed": "npm run build && npx playwright test --headed",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^6.18.0",
